<%= form_with(model: linkapp) do |form| %>
  <% if linkapp.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(linkapp.errors.count, "error") %> prohibited this linkapp from being saved:</h2>

      <ul>
        <% linkapp.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :hyperlink %>
    <%= form.text_field :hyperlink, class: "form-control" %>
  </div>

  <div class="form-group">
    <% if linkapp.preview.attached? %>
      <%= image_tag linkapp.image, style: "width: 200px; display: block" %>
    <% end %>

    <%= form.label :preview %>
    <%= form.file_field :preview, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
